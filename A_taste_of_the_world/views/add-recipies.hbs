<section class="add-form">
  <form action="/favourite-foods" method="POST" class="container-form bg-form">
    <div class="title-form">
      <h2 class="white">Insert your recipies</h2>
    </div>
    <input type="text" name="recipe" placeholder="insert your recipe" class="input"><br />
    <input type="text" name="country" placeholder="insert the country" class="input"><br />
    <textarea name="description" id="" cols="30" rows="10" placeholder="Insert your description"></textarea><br />
    <textarea name="ingredient" id="" cols="30" rows="10" placeholder="Insert the ingredients "></textarea><br />
    <input type="file" class="btn-add-img" /><br />
    <button class="submit-btn">Submit</button>
  </form>
</section>